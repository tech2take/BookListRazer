@page
@model BookListRazer.Pages.BookList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info from-control text-white">Create New Book</a>
    </div>


    <div class="col-12 border pt-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=> m.Books.FirstOrDefault().Author)*@
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>

                        <th>
                            @*@Html.DisplayNameFor(m=> m.Books.FirstOrDefault().Author)*@
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var Item in Model.Books)
                    {
                        <tr>
                            <td>
                                <a asp-page="Details" asp-route-id="@Item.Id">@Html.DisplayFor(m => Item.Name)</a>
                            </td>
                            <td>
                                @Html.DisplayFor(m => Item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => Item.ISBN)
                            </td>
                            <td>
                                <button asp-page="Delete" asp-route-id="@Item.Id" class="=btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@Item.Id" class="btn btn-success btn-sm">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No books available.</p>
            }
        </form>
    </div>
    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br />
        <br />
    </div>
    <div class="col-12 border p-3">
        <table id="DT_Load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{ 
<script src="~/js/BookList.js"></script>
}